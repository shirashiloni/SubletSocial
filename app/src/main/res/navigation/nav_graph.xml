<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment"> <fragment
    android:id="@+id/loginFragment"
    android:name="com.example.subletsocial.features.LoginFragment"
    android:label="Login"
    tools:layout="@layout/fragment_login">
    <action
        android:id="@+id/action_loginFragment_to_feedFragment"
        app:destination="@id/feedFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />
</fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.subletsocial.features.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_createListingFragment"
            app:destination="@id/createListingFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.subletsocial.features.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>

    <fragment
        android:id="@+id/createListingFragment"
        android:name="com.example.subletsocial.features.CreateListingFragment"
        android:label="Post"
        tools:layout="@layout/fragment_create_listing" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.subletsocial.features.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_profileFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>

    <fragment
        android:id="@+id/singlePostFragment"
        android:name="com.example.subletsocial.features.SinglePostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_single_post">
        <argument
            android:name="listingId"
            app:argType="string" />
        <action
            android:id="@+id/action_singlePostFragment_to_editListingFragment"
            app:destination="@id/editListingFragment" />
        <action
            android:id="@+id/action_singlePostFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editListingFragment"
        android:name="com.example.subletsocial.features.EditListingFragment"
        android:label="Edit Post"
        tools:layout="@layout/fragment_create_listing">
        <argument
            android:name="listingId"
            app:argType="string" />
    </fragment>
    <argument
        android:name="userId"
        app:argType="string" />

</navigation>